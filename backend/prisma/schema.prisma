// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id Int @id @default(autoincrement())
  name String
  editorial Editorial @relation(fields: [id_editorial], references: [id])
  id_editorial Int
  author Author @relation(fields: [id_author], references: [id])
  id_author Int
  gender Gender @relation(fields: [id_gender], references: [id])
  id_gender Int
  n_pages Int
  edition_year DateTime
  price Float
  location Location @relation(fields: [id_location], references: [id])
  id_location Int
  n_edition Int
  stock Int @default(0)
  languaje Languaje @relation(fields: [id_languaje], references: [id])
  id_languaje Int
}

model Editorial {
  id Int @id @default(autoincrement())
  name String
  phone_number Int
  city String
  books Book[]
}

model Author {
  id Int @id @default(autoincrement())
  name String
  surname String
  nacionality String
  profile_picture String
  books Book[]
}

model Gender {
  id Int @id @default(autoincrement())
  gender String
  books Book[]
}
 model Location {
  id Int @id @default(autoincrement())
  shelf_number String
  books Book[]
 }

model Languaje {
  id Int @id @default(autoincrement())
  name String
  books Book[]
}